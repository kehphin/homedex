---
import Layout from "../layouts/Layout.astro";

// src/pages/404.astro
---

<Layout title="404">
		<main class="flex-grow flex items-center py-32">
			<div class="container mx-auto px-4 flex">
				<div class="w-1/2 pr-8">
					<h1 class="text-super-large font-bold text-base-300 leading-none">404</h1>
				</div>
				<div class="w-1/2 flex flex-col justify-center">
					<p class="text-xl mb-6">The page you're looking for doesn't exist.</p>
					<a href="/" class="btn btn-primary w-32">Try this way</a>
				</div>
			</div>
		</main>
</Layout>

<style>
	.text-super-large {
		font-size: 20vw;
		line-height: 1;
	}
</style>