---
// src/pages/blog/index.astro
import Layout from '../layouts/Layout.astro';
import BlogPostCard from '../components/BlogPostCard.astro';

// Get all blog posts at build time
const posts = await Astro.glob('./blog/*.md');
posts.sort((a: any, b: any) => new Date(b.frontmatter.date).getTime() - new Date(a.frontmatter.date).getTime());

const title = "Your SaaS Product - Blog";
const description = "Stay up to date with the latest insights, tips, and news about our SaaS platform and industry trends.";
---

<Layout title={title} description={description}>
  <div class="min-h-screen bg-base-300">
    <section class="py-32">
      <div class="container mx-auto px-4">
        <h1 class="text-6xl font-bold mb-4 text-center">
          Dev Pack BlogðŸš€
        </h1>
        <p class="text-xl text-center mb-16 text-base-content opacity-80 max-w-2xl mx-auto">
          Insights, tips, and news to help you make the most of our platform and stay ahead in the digital landscape.
        </p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12">
          {posts.map((post) => (
            <BlogPostCard post={post.frontmatter} url={post.url} />
          ))}
        </div>
        
      </div>
    </section>
  </div>
</Layout>