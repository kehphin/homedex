---
// HeroSection.astro
import CheckoutButton from './CheckoutButton.jsx';
const stripeProductId = 'prod_12345';
---

<section id="home" class="pt-24 sm:pt-32 relative min-h-screen flex items-center overflow-hidden">
  {/* Abstract background shapes */}
  <div class="absolute inset-0">
    <div class="absolute -top-1/4 -left-1/4 w-1/2 h-1/2 bg-primary opacity-10 rounded-full filter blur-5xl animate-drift"></div>
    <div class="absolute -bottom-1/4 -right-1/4 w-1/2 h-1/2 bg-secondary opacity-10 rounded-full filter blur-5xl animate-drift animation-delay-2000"></div>
  </div>
    
    {/* Content */}
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 z-10">
    <div class="flex flex-col lg:flex-row items-center">
      <div class="w-full lg:w-1/2 lg:pr-16 text-center lg:text-left">
        <h1 class="text-6xl lg:text-7xl font-extrabold mb-6 leading-tight text-center lg:text-left">
          <span class="relative inline-block">
            <span 
              class="absolute inset-0 bg-gradient-to-r from-primary to-secondary opacity-50 blur-3xl"
              style="transform: translate(-5%, -5%) scale(1.1)"
            ></span>
            <span 
              class="relative text-transparent bg-clip-text bg-gradient-to-r from-primary to-secondary"
              style={{
                textShadow: `
                  0 0 10px var(--p),
                  0 0 20px var(--p),
                  0 0 30px var(--p)
                `
              }}
            >
              Launch
            </span>
          </span>{" "}
          Your Startup Today
        </h1>
        <p class="text-xl mb-8 text-base-content opacity-80">Try changing this page! Head over to <span class="text-secondary">./astro/src/components/HeroSection.astro</span></p>
        <div class="flex flex-col sm:flex-row gap-4 w-full sm:w-auto">
          <CheckoutButton client:load stripeProductId={stripeProductId}  className="btn btn-primary btn-lg rounded-full px-8 py-4 text-xl transition-all duration-300 hover:bg-primary-focus w-full sm:w-auto">
            Get Started
          </CheckoutButton>
          <button class="btn btn-outline btn-secondary btn-lg rounded-full px-8 py-4 text-xl transition-all duration-300 w-full sm:w-auto">
            Watch Demo
          </button>
        </div>
        <div class="mt-8 sm:mt-12 text-center lg:text-left">
          <p class="text-base-content opacity-80">Join 10,000+ teams already using our platform</p>
        </div>
      </div>
      <div class="lg:w-1/2 md:w-full px-4 mt-12 mb-12">
        <div class="relative">
          <div class="bg-base-200 rounded-3xl p-4 sm:p-6 md:p-8">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              {[1, 2, 3, 4].map((item) => (
                <div class="bg-base-100 rounded-2xl p-4 sm:p-6 border border-base-300 transition-all duration-300 hover:border-primary">
                  <div class="w-12 h-12 bg-primary bg-opacity-10 rounded-full flex items-center justify-center mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width={2} d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                  </div>
                  <h3 class="font-bold mb-2 text-lg">Feature {item}</h3>
                  <p class="text-sm text-base-content opacity-70">Boost your productivity with our amazing features.</p>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>